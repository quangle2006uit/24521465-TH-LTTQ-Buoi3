<Window x:Class="BTTH_Bai7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BTTH_Bai7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="4.5*"/>
            </Grid.RowDefinitions>
            <TextBlock Text="MÀN ẢNH"
                       Foreground="DarkOrange"
                       FontSize="40"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Grid>
        <Grid x:Name="Ghe">
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="7*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="30"/>
                    <Setter Property="Background" Value="White"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Style>
            </Grid.Resources>
            <Button Grid.Row="2"
                    Grid.Column="1"
                    Content="1" Click="SoGhe"/>
            <Button Grid.Row="2"
                    Grid.Column="3" Click="SoGhe"
                    Content="2"/>
            <Button Grid.Row="2"
                    Grid.Column="5" Click="SoGhe"
                    Content="3"/>
            <Button Grid.Row="2"
                    Grid.Column="7" Click="SoGhe"
                    Content="4"/>
            <Button Grid.Row="2"
                    Grid.Column="9" Click="SoGhe"
                    Content="5"/>
            <Button Grid.Row="4"
                    Grid.Column="1" Click="SoGhe"
                    Content="6"/>
            <Button Grid.Row="4"
                    Grid.Column="3" Click="SoGhe"
                    Content="7"/>
            <Button Grid.Row="4"
                    Grid.Column="5" Click="SoGhe"
                    Content="8"/>
            <Button Grid.Row="4"
                    Grid.Column="7" Click="SoGhe"
                    Content="9"/>
            <Button Grid.Row="4"
                    Grid.Column="9" Click="SoGhe"
                    Content="10"/>
            <Button Grid.Row="6"
                    Grid.Column="1" Click="SoGhe"
                    Content="11"/>
            <Button Grid.Row="6"
                    Grid.Column="3" Click="SoGhe"
                    Content="12"/>
            <Button Grid.Row="6"
                    Grid.Column="5" Click="SoGhe"
                    Content="13"/>
            <Button Grid.Row="6"
                    Grid.Column="7" Click="SoGhe"
                    Content="14"/>
            <Button Grid.Row="6"
                    Grid.Column="9" Click="SoGhe"
                    Content="15"/>
        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Thành Tiền :"
                       Grid.Row="8"
                       Grid.Column="1"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="30"/>
            <Border Grid.Row="8"
                    Grid.Column="3"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White">

                <TextBlock x:Name="TT"
                   FontSize="30"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Margin="5" />
            </Border>


        </Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.1*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
                <RowDefinition Height="0.7*"/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="0.5*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.Resources>
                <Style TargetType="Button">
                    <Setter Property="FontSize" Value="25"/>
                    <Setter Property="BorderBrush" Value="Black"/>
                    <Setter Property="BorderThickness" Value="1"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                </Style>
            </Grid.Resources>
            <Button Grid.Row="10"
                    Grid.Column="1"
                    Content="Chọn" Click="Chon" />
            <Button Grid.Row="10"
                    Grid.Column="3"
                    Content="Huỷ Bỏ" Click="HuyBo"/>
            <Button Grid.Row="10"
                    Grid.Column="5"
                    Content="Kết Thúc" Click="KetThuc"/>


        </Grid>


    </Grid>
</Window>
